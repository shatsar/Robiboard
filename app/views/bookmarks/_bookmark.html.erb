<div class="bookmark thumbnail">
	<%= link_to image_tag(bookmark.snapshot.url(:medium), :class => "img-rounded"), bookmark.url, :target => "_BLANK" %>
	<p class="details">
	<span class="description"><%= bookmark.description %></span>	
		<%= link_to(bookmark) do %>
			<i class="glyphicon glyphicon-zoom-in"></i>
		<% end %>
	</p>	
</div>
